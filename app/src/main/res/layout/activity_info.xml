<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".info">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/pikachuGif"
        android:layout_width="734dp"
        android:layout_height="399dp"
        android:src="@drawable/pokedex"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="236dp"
        android:layout_height="321dp"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="390dp"
        app:layout_constraintBottom_toBottomOf="@+id/pikachuGif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pikachuGif">

        <ImageView
            android:id="@+id/dittoInfo"
            android:layout_width="match_parent"
            android:layout_height="291dp"
            app:srcCompat="@drawable/dittoinfo" />

        <ImageView
            android:id="@+id/oneninefour"
            android:layout_width="313dp"
            android:layout_height="55dp"
            app:srcCompat="@drawable/no194" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="275dp"
        android:layout_height="334dp"
        app:layout_constraintBottom_toBottomOf="@+id/pikachuGif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="@+id/pikachuGif"
        app:layout_constraintTop_toTopOf="@+id/pikachuGif"
        app:layout_constraintVertical_bias="0.707">

        <ImageView
            android:id="@+id/pikachuInfo"
            android:layout_width="257dp"
            android:layout_height="253dp"
            app:srcCompat="@drawable/pikachuinfo" />

        <ImageView
            android:id="@+id/threeseventhree"
            android:layout_width="277dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/no373" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

